@model Models.Pizza

<h4>Pizza</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Pate)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Pate.Nom)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Ingredients)
    </dt>

    <dd>
        @Html.ListBoxFor(model => model.Ingredients, Model.Ingredients.Select(i => new SelectListItem { Value = i.Id.ToString(), Text = i.Nom }))
    </dd>

</dl>